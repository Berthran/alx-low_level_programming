CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
MYCFLAGS = -Wall -Werror -Wextra -pedantic
SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(MYCFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all


.PHONY: all $(NAME) clean oclean fclean re



